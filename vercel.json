{
  "version": 2,
  "builds": [
    {
      "src": "proyectoFinal/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "proyectoFinal/dist/proyecto-final/browser"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/proyectoFinal/dist/proyecto-final/browser/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
